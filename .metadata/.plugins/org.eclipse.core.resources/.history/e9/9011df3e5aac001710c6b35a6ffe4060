	public static boolean[] checkPositions(Field field) {
		//NORTH		
			if (field.getXt() > 0 && field.getXt() < field.getSizeR()) {
				positions[0]= true;
			}else {
				positions[0]=false;
			}
		//WEST
			if (field.getYt() > 0 && field.getYt() < field.getSizeC()) {
				positions[1]=true;
			}else {
				positions[1]=false;
			}
		//EAST
			if (field.getYt() < field.getSizeC()-1) {
				positions[2]=true;
			}else {
				positions[2]=false;
			}
		//SOUTH
			if (field.getXt() < field.getSizeR()-1) {
				positions[3]=true;
			}else {
				positions[3]=false;
			}
		return positions;
	}
	
