				}
			}
		}else return;
	}
	
	private static int nextPosAvailable(int position, int [] distribution, Field field) {
		for(int i = position+1; i<distribution.length; i++) {
			if(positions[i]) { //Falta comprobar que no sea mayor que el máximo
				return i;
			}
		}
		return 5; //Key to say there's no more places to place sand
	}
	

	public static void MoveSand(Field field, ArrayList<int[]> Adjacent, ArrayList<int[]> Solution, int [] quantity) {
		Iterator <int[]> it;
		it=Adjacent.iterator();
		int i=0;
		while(it.hasNext()) {
			int [] vector= it.next();
			//EN SOLUCION PODEMOS PONER FORMATO CANTIDAD, POSICION X, POSICION Y
			quantity[i]++;
			if(field.getNumber(vector[0], vector[1]) + quantity[i]>= field.getMax() || field.getNumber(field.getXt(), field.getYt()) - quantity[i] <= 0) {
				i++;
				System.out.println("Ya no se puede mas en " + vector[0] + " " + vector[1]);
				quantity[i]--;
				continue;
			}
			//EN LA POSICION 0 LA CANTIDAD, POSICION 1 Y 2, LAS POSICIONES DEL VECTOR
			int [] vector1= new int[3];
			
			vector1[0]= quantity[i];
			vector1[1]= vector[0];
			vector1[2]= vector [1];
			Solution.add(vector1);
			
			MoveSand(field, Adjacent, Solution, quantity);
			System.out.println(vector1[0] + " " + vector1[1]+ " "+ vector1[2]);
			quantity[i]--;
			i++;
			
		}
		
		System.out.println("YA");
	}
	
