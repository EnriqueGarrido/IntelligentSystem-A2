package practica;

public class Estado {

	private int posicionX;
	private int posicionY;
	private int cantidadArena;
	
	public Estado(int posicionX, int posicionY, int cantidadArena){
		this.posicionX = posicionX;
		this.posicionY = posicionY;
		this.cantidadArena = cantidadArena;
		
	}


	public Estado(){
	
	}

	
	public int getPosicionX() {
		return posicionX;
	}

	public void setPosicionX(int posicionX) {
		this.posicionX = posicionX;
	}

	public int getPosicionY() {
		return posicionY;
	}

	public void setPosicionY(int posicionY) {
		this.posicionY = posicionY;
	}

	public int getCantidadArena() {
		return cantidadArena;
	}

	public void setCantidadArena(int cantidadArena) {
		this.cantidadArena = cantidadArena;
	}



	public ArrayList<Integer[]> movimientosValidos(int filas, int columnas){
		ArrayList<Integer[]> mov = new ArrayList<Integer[]>();
		 Integer[] aux = {0, 0};
	     Integer[] aux1 = {0, 0};
	     Integer[] aux2 = {0, 0};
	     Integer[] aux3 = {0, 0};
		
		if ( getPosicionX()-1 >= 0) { // Si x menos 1 es mayor que 0 entonces podemos mover ahi porque no se sale fuera de los limites
			aux[0] = getPosicionX()-1;
			aux[1] = getPosicionY();
			mov.add(aux);
		}
		if ( getPosicionX()+1 < filas) { //Si x mas 1 es menor que el numero de filas entonces no nos salimos
			aux1[0] = getPosicionX()+1;
			aux1[1] = getPosicionY();
			mov.add(aux1);		}
		if ( getPosicionY()-1 >= 0) {
			aux2[0] = getPosicionX();
			aux2[1] = getPosicionY() - 1;
			mov.add(aux2);
		}
		if ( getPosicionY()+1 < columnas) {
			aux3[0] = getPosicionX();
			aux3[1] = getPosicionY() + 1;
			mov.add(aux3);
		}
		return mov;
	}
}
